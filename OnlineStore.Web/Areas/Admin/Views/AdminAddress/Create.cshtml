@using OnlineStore.Domain.ViewModel.UserPanel
@model CreateAddressViewModel
@{
    ViewData["Title"] = "افزودن نشانی";
}
<form asp-area="Admin" asp-controller="AdminAddress" asp-action="Create" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <div class="form-line">
            <input asp-for="State" type="text" class="form-control" placeholder=" استان" />
        </div>
    </div>  <div class="form-group">
        <div class="form-line">
            <input asp-for="City" type="text" class="form-control" placeholder=" شهر" />
        </div>
    </div>  <div class="form-group">
        <div class="form-line">
            <input value="" asp-for="PostCod" type="text" class="form-control" placeholder=" کد پستی" />
        </div>
    </div>  <div class="form-group">
        <div class="form-line">
            <textarea rows="5" asp-for="TotalAddress" type="text" class="form-control" placeholder=" آدرس کامل" />
        </div>
    </div>
    <br>
    <button type="submit" class="btn btn-primary m-t-15 waves-effect">افزودن</button>
</form>
