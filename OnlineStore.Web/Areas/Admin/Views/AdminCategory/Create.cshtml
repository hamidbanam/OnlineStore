@using OnlineStore.Domain.ViewModel.Admin.Category
@model CreateCategoryViewModel
@{
    ViewData["Title"] = "افزودن ویژگی";
}
<form asp-area="Admin" asp-controller="AdminCategory" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <div class="form-line">
            <select asp-for="ParentId"  class="form-control">
                <option selected disabled>دسته بندی اصلی را انتخاب نمایید</option>
                @if(Model.Categories!=null)
                {
                    @foreach (var item in Model.Categories.Where(c=>c.ParentId==null))
                    {
                        <option value="@item.CategoryId">@item.CategoryTitle</option>
                    }
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="form-line">
            <input asp-for="CategoryTitle" type="text" class="form-control" placeholder="عنوان دسته بندی" />
        </div>
    </div>
    <div class="form-group">
        <div class="file-field input-field">
            <div class="btn">
                <span>تصویر</span>
                <input asp-for="CategoryAvatar" type="file">
            </div>
            <div class="file-path-wrapper">
                <input class="file-path validate" type="text">
            </div>
        </div>
    </div>
    <br>
    <button type="submit" class="btn btn-primary m-t-15 waves-effect">افزودن</button>
</form>