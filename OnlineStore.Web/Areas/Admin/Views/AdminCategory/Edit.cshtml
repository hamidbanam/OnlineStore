@using OnlineStore.Domain.ViewModel.Admin.Category
@model EditCategoryViewModel
@{
    ViewData["Title"] = "ویرایش ویژگی";
}
<form asp-area="Admin" asp-controller="AdminCategory" asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="CategoryId" />
    <div class="form-group">
        <div class="form-line">
            <select asp-for="ParentId" class="form-control">
                <option selected disabled>دسته بندی اصلی را انتخاب نمایید</option>
                @if (Model.Categories != null)
                {
                    <option value="">انتخاب به عنوان دسته بندی اصلی</option>
                    @foreach (var item in Model.Categories.Where(c => c.ParentId == null))
                    {
                        <option value="@item.CategoryId">@item.CategoryTitle</option>
                    }
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="form-line">
            <input asp-for="CategoryTitle" type="text" class="form-control" placeholder="عنوان دسته بندی" />
        </div>
    </div>
    <div class="form-group">
        <div class="file-field input-field">
            <div class="btn">
                <span>تصویر</span>
                <input asp-for="CategoryAvatar" type="file">
            </div>
            <div class="file-path-wrapper">
                <input class="file-path validate" type="text">
            </div>
        </div>
    </div>
    <br>
    <button type="submit" class="btn btn-primary m-t-15 waves-effect">ویرایش</button>
</form>