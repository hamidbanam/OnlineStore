@using OnlineStore.Application.Extensions
@using OnlineStore.Application.Services.Interface
@using OnlineStore.Domain.ViewModel.Admin.User
@model EditAdminUserViewModel
@inject IWalletService walletService;
@{
    ViewData["Title"] = "ویرایش کاربر";
    int amountBalance = await walletService.BalanceAmountAsync(Model.UserId);
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="body">
                <h2 class="card-inside-title">@ViewData["Title"]</h2>
                <h2 class="card-inside-title">موجودی کیف پول: @amountBalance.ToMoney() تومان</h2>
                <form asp-area="Admin" asp-controller="AdminUser" asp-action="Edit" method="post">
                    <input type="hidden" asp-for="UserId" />
                    <div class="row clearfix">
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="material-icons">person</i>
                                </span>
                                <div class="form-line">
                                    <input asp-for="UserName" type="text" class="form-control date" placeholder="نام کاربری">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="material-icons">person</i>
                                </span>
                                <div class="form-line">
                                    <input asp-for="FirstName" type="text" class="form-control date" placeholder="نام">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="material-icons">person</i>
                                </span>
                                <div class="form-line">
                                    <input asp-for="LastName" type="text" class="form-control date" placeholder="نام خانوادگی">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="material-icons">email</i>
                                </span>
                                <div class="form-line">
                                    <input asp-for="Email" type="text" class="form-control date" placeholder="ایمیل">
                                </div>

                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="material-icons">smartphone</i>
                                </span>
                                <div class="form-line">
                                    <input asp-for="Mobile" type="text" class="form-control date" placeholder="موبایل">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="material-icons">https</i>
                                </span>
                                <div class="form-line">
                                    <input asp-for="Password" type="text" class="form-control date" placeholder="رمز عبور">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="input-field col s12">
                                <div class="select-wrapper">
                                    <select asp-for="RolesId" multiple tabindex="-1">
                                        <option disabled selected>نقش کاربر را انتخاب کنید</option>
                                        @if (Model.Roles != null)
                                        {
                                            @foreach (var item in Model.Roles)
                                            {
                                                <option value="@item.RoleId">@item.RoleTitle</option>
                                            }
                                        }

                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <p>
                                <label>
                                    <input asp-for="IsActive" type="checkbox" class="filled-in">
                                    <span> وضعیت کاربر</span>
                                </label>
                            </p>
                        </div>

                        <div class="col-md-4">
                            <Input type="submit" class="btn bg-green waves-effect" value="ثبت اطلاعات">
                        </div>
                        <div asp-validation-summary="All"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>