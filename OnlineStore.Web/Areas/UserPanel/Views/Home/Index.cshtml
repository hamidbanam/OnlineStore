@using OnlineStore.Application.Generators
@using OnlineStore.Application.Extensions
@using OnlineStore.Domain.ViewModel.Client.Order
@model List<OrderViewModel>
@{
    ViewData["Title"] = "پنل کاربری";
}

<div class="row">
    <div class="col-12">
        <div class="ui-box bg-white mb-5">
            <div class="ui-box-title">لیست آخرین سفارشها</div>
            <div class="ui-box-content">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>شماره سفارش</th>
                                <th>تاریخ ثبت سفارش</th>
                                <th>مبلغ قابل پرداخت</th>
                                <th>عملیات پرداخت</th>
                                <th>جزییات</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td hidden class="fa-num">@item.OrderId</td>
                                    <td class="font-en fw-bold">@item.RefId</td>
                                    <td class="fa-num text-muted">@item.CreateDate.ToShamsiDay() @item.CreateDate.ToShamsiMonth().GetPersianMonthName() @item.CreateDate.ToShamsiYear()</td>
                                    <td class="fa-num fs-6 fw-bold">@item.Price?.ToMoney() <span class="currency">تومان</span></td>
                                    <td>
                                        <span class="badge bg-success rounded-pill fs-7">
                                            پرداخت
                                            شده
                                        </span>
                                    </td>
                                    <td>
                                        <a asp-area="UserPanel" asp-controller="Home" asp-action="OrderDetail" asp-route-orderId="@item.OrderId" class="btn btn-sm btn-outline-light">جزئیات <i class="ri-arrow-left-s-fill"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


