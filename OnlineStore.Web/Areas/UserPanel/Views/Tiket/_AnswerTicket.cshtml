@using OnlineStore.Domain.ViewModel.Tiket
@model ClientAsnwerTicketViewModel

<div class="border-bottom my-4"></div>
<div class="ui-box-title p-0 mb-4">
    ارسال پاسخ
</div>
<!-- start of add-ticket-form -->
<form  asp-action="Answer" method="post" class="add-ticket-form">

    <input type="hidden" asp-for="TicketId" />

    <div class="row">
        <div class="col-12">
            <!-- start of form-element -->
            <div class="form-element-row mb-5">
                <label class="label" asp-for="Message"></label>
                <textarea rows="5" class="form-control" asp-for="Message"></textarea>
                <span asp-validation-for="Message"></span>
            </div>
            <!-- end of form-element -->
        </div>
        <div class="col-12 text-end">
            <button type="submit" class="btn btn-primary">
                ارسال پاسخ <i class="ri-ball-pen-line ms-2"></i>
            </button>
        </div>
    </div>
</form>
<!-- end of add-ticket-form -->