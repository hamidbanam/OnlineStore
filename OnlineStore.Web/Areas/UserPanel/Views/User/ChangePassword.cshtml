@using OnlineStore.Domain.ViewModel.UserPanel
@model ChangePasswordViewModel
@{
    ViewData["Title"] = "ویرایش رمزعبور";
}
<div class="ui-box bg-white mb-5">
    <div class="ui-box-title">@ViewData["Title"]</div>
    <form asp-area="UserPanel" asp-controller="User" asp-action="ChangePassword" method="post">
        <input type="hidden" asp-for="UserId" />
        <div class="ui-box-content">
            <div class="row">
                <div class="col-lg-6 mb-3">
                    <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور" />
                </div>
                <div class="col-lg-6 mb-3">
                    <input asp-for="RePassword" type="password" class="form-control" placeholder="تکرار رمزعبور" />
                </div>
                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-primary px-4">ثبت و ارسال</button>
                </div>
                <div asp-validation-summary="All"></div>
            </div>
        </div>
    </form>
</div>