@using OnlineStore.Domain.ViewModel.Account
@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "فراموشی رمزعبور";
}

<div class="auth-container">
    <div class="auth-title mb-3">@ViewData["Title"]</div>
    <!-- start of auth-box -->
    <div class="auth-box ui-box">
        <!-- start of auth-form -->
        <form asp-area="" asp-controller="Account"  asp-action="ForgotPassword" class="auth-form">
            <!-- start of form-element -->
            <div class="form-element-row mb-3">
                <input asp-for="Mobile" type="text" class="form-control" placeholder="شماره موبایل ">
            </div>
            <!-- end of form-element -->
            <!-- start of form-element -->
            <div class="form-element-row mb-3">
                <button class="btn btn-primary">دریافت کد</button>
            </div>
            <div asp-validation-summary="All"></div>
            <!-- end of form-element -->

        </form>
        <!-- end of auth-form -->
    </div>
    <!-- end of auth-box -->
</div>