@using OnlineStore.Domain.ViewModel.Account
@model ResetPasswordViewModel
@{
    ViewData["Title"] = "تغییر رمزعبور";
}

<div class="auth-container">
    <div class="auth-title mb-3">@ViewData["Title"]</div>
    <!-- start of auth-box -->
    <div class="auth-box ui-box">
        <!-- start of auth-form -->
        <form asp-controller="Account" asp-action="ResetPassword" method="post" class="auth-form">
            <!-- start of form-element -->
            <input type="hidden" asp-for="Mobile" />
            <div class="form-element-row mb-3">
                <input value="" asp-for="ConfirmCode" type="text" maxlength="6" class="form-control" placeholder="کد ارسالی">
            </div>
            <div class="form-element-row mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="رمزعبور">
            </div>
            <div class="form-element-row mb-3">
                <input asp-for="RePassword" type="password" class="form-control" placeholder="تکرار رمزعبور">
            </div>
            <!-- end of form-element -->
            <!-- start of verify-code-wrapper -->
@*             <div class="verify-code-wrapper mt-3 mb-5">
                <div class="d-flex align-items-center" dir="ltr">
                    <span class="text-sm">مدت زمان باقیمانده</span>
                    <span class="mx-4">|</span>
                    <div id="timer--verify-code" data-minutes-left="1">
                        <div class="jst-clearDiv"></div>
                    </div>
                </div>
                <a href="#" class="send-again link">ارسال مجدد</a>
            </div> *@
            <!-- end of verify-code-wrapper -->
            <!-- start of form-element -->
            <div class="form-element-row mb-3">
                <button type="submit" class="btn btn-primary">تغییر رمز عبور</button>
            </div>
            <!-- end of form-element -->
        </form>
        <!-- end of auth-form -->
    </div>
    <!-- end of auth-box -->
</div>