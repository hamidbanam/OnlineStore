@using OnlineStore.Application.Static
@using OnlineStore.Domain.ViewModel.Slider.HomePageSlider
@model List<HomePageSliderViewModel>
@{
    int sliderCount = Model.Count();
}
<div class="mini-slider-container mb-5">
    <!-- Slider main container -->
    <div class="swiper mini-single-swiper-slider swiper-initialized swiper-horizontal swiper-pointer-events swiper-rtl">
        <!-- Additional required wrapper -->
        <div class="swiper-wrapper" id="swiper-wrapper-ebb5881f6d781353" aria-live="off" style="transform: translate3d(951px, 0px, 0px); transition-duration: 0ms;">
            <!-- Slides -->
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    @if(item.IsActive)
                    {
                        <div class="swiper-slide swiper-slide-prev" role="group" aria-label="@item.SliderId / @sliderCount" style="width: 941px; margin-left: 10px;">
                            <a href="@item.SliderUrl">
                                <img src="@PathTools.Slider/@item.SliderImage" alt="@item.SliderTitle">
                            </a>
                        </div>
                    }
                   
                }

            }
        </div>
        <div class="slider-handler">
            <div class="swiper-button-prev" tabindex="0" role="button" aria-label="Previous slide" aria-controls="swiper-wrapper-c37a55c216a02b8c" aria-disabled="false"></div>
            <div class="swiper-pagination swiper-pagination-clickable swiper-pagination-bullets swiper-pagination-horizontal">
                <span class="swiper-pagination-bullet" tabindex="0" role="button" aria-label="Go to slide 1"></span>
                <span class="swiper-pagination-bullet swiper-pagination-bullet-active" tabindex="0" role="button" aria-label="Go to slide 2" aria-current="true"></span>
                <span class="swiper-pagination-bullet" tabindex="0" role="button" aria-label="Go to slide 3"></span>
                <span class="swiper-pagination-bullet" tabindex="0" role="button" aria-label="Go to slide 4"></span>
            </div>
            <div class="swiper-button-next" tabindex="0" role="button" aria-label="Next slide" aria-controls="swiper-wrapper-c37a55c216a02b8c" aria-disabled="false"></div>
        </div>
        <span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span>
    </div>
</div>